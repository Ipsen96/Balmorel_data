PARAMETER INDHEAT_MINPERCENT(YYY,INDHEAT_AAA,INDHEAT_GROUP) 'Minimum percentage assumed to be fixed to a specific group';
*Assume 3% each year change new heating system. 30% every 10 years. Source: BDEW2014

INDHEAT_MINPERCENT(Y,INDHEAT_AAA,INDHEAT_GROUP)  = (1-(YVALUE(Y)-2016)*0.03)$(SUM(INDHEAT_G$(INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP) AND INDHEAT_AGKN(INDHEAT_AAA,INDHEAT_G,INDHEAT_GROUP)),INDHEAT_GINSTALL('2016',INDHEAT_AAA,INDHEAT_G,INDHEAT_GROUP))>0);
INDHEAT_MINPERCENT(Y,INDHEAT_AAA,INDHEAT_GROUP)$(INDHEAT_MINPERCENT(Y,INDHEAT_AAA,INDHEAT_GROUP) LT 0) =0;

*Include the following if 30% willingsness to shift for all technologies that is or can be installed:
INDHEAT_MINPERCENT('2030',INDHEAT_AAA,INDHEAT_GROUP)$(SUM(INDHEAT_G$(INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP)),INDHEAT_GINSTALL('2016',INDHEAT_AAA,INDHEAT_G,INDHEAT_GROUP)) OR SUM(INDHEAT_G$(INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP)),INDHEAT_AGKN(INDHEAT_AAA,INDHEAT_G,INDHEAT_GROUP)))= 0.7;
INDHEAT_MINPERCENT('2040',INDHEAT_AAA,INDHEAT_GROUP)$(SUM(INDHEAT_G$(INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP)),INDHEAT_GINSTALL('2016',INDHEAT_AAA,INDHEAT_G,INDHEAT_GROUP)) OR SUM(INDHEAT_G$(INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP)),INDHEAT_AGKN(INDHEAT_AAA,INDHEAT_G,INDHEAT_GROUP)))= 0.7;
INDHEAT_MINPERCENT('2050',INDHEAT_AAA,INDHEAT_GROUP)$(SUM(INDHEAT_G$(INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP)),INDHEAT_GINSTALL('2016',INDHEAT_AAA,INDHEAT_G,INDHEAT_GROUP)) OR SUM(INDHEAT_G$(INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP)),INDHEAT_AGKN(INDHEAT_AAA,INDHEAT_G,INDHEAT_GROUP)))= 0.7;
*Fossil fuel based technologies are exceptions, coal and oil from 2030, gas from 2040
INDHEAT_MINPERCENT(Y,INDHEAT_AAA,INDHEAT_GROUP)$(SUM(INDHEAT_G$(INDHEAT_GDATA(INDHEAT_G,'GDFUEL') EQ IDVH_COAL),INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP)) AND ( YVALUE(Y) GE 2030) )  = 0;
INDHEAT_MINPERCENT(Y,INDHEAT_AAA,INDHEAT_GROUP)$(SUM(INDHEAT_G$(INDHEAT_GDATA(INDHEAT_G,'GDFUEL') EQ IDVH_LIGHTOIL),INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP)) AND ( YVALUE(Y) GE 2030) )  = 0;
INDHEAT_MINPERCENT(Y,INDHEAT_AAA,INDHEAT_GROUP)$(SUM(INDHEAT_G$(INDHEAT_GDATA(INDHEAT_G,'GDFUEL') EQ IDVH_NATGAS),INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP)) AND ( YVALUE(Y) GE 2040) )  = 0;
