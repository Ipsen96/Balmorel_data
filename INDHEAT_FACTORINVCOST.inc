PARAMETER INDHEAT_FACTORINVCOST(YYY,INDHEAT_GGG,INDHEAT_GROUP) 'Factor to multiply investment cost with for specific heating groups (default 1)';
*Draft version: assuming that 80% would have the same type of technology in the following year

INDHEAT_FACTORINVCOST(Y,INDHEAT_G,'GR_GBHPA2W')$(INDHEAT_GINGROUP(INDHEAT_G,'GR_GBHPA2W') AND INDHEAT_GDATA(INDHEAT_G,'GDFE') <1.5) = 1;
INDHEAT_FACTORINVCOST(Y,INDHEAT_G,'GR_GBHPA2W')$(INDHEAT_GINGROUP(INDHEAT_G,'GR_GBHPA2W') AND INDHEAT_GDATA(INDHEAT_G,'GDFE') GE 1.5) = 1;
INDHEAT_FACTORINVCOST(Y,INDHEAT_G,INDHEAT_GROUP)$(INDHEAT_GINGROUP(INDHEAT_G,INDHEAT_GROUP) AND INDHEAT_FACTORINVCOST(Y,INDHEAT_G,INDHEAT_GROUP) =0) =1;
